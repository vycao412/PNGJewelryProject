@model PNG.Models.Category

@{
    ViewBag.Title = "Create Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (@TempData["ADD_CATEGORY"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["ADD_CATEGORY"]
    </div>
}
<div class="container" style="margin-top: 20vh;">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <h5 class="card-title text-center">CREATE CATEGORY</h5>
            <hr />
            @using (Html.BeginForm("Create", "Category", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.CategoryName)
                        @Html.TextBoxFor(m => m.CategoryName, "", new { @class = "form-control", @placeholder = "Name" })
                        @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                    </div>
                 </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-primary btn-block" value="Create" />
                </div>
            }
        </div>
        <div class="col-4"></div>
    </div>
    
</div>



